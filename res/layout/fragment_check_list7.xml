<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/tvBanner_FCL7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CheckListEtapBanner"
        android:text="@string/fragment_check_list_etap7_banner_text"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tvBanner_FCL7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etName_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question1_text"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etForename_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question2_text"
                android:layout_below="@id/etName_FCL7"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etAddress_FCL7"
                android:hint="@string/fragment_check_list_etap7_question3_text"
                style="@style/CheckListET"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                android:layout_below="@id/etForename_FCL7"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etPostalCode_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question4_text"
                android:layout_below="@id/etAddress_FCL7"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etCity_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question5_text"
                android:layout_below="@id/etPostalCode_FCL7"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvOwner_FCL7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CheckListQuestion"
                android:text="@string/fragment_check_list_etap7_question6_text"
                android:gravity="center"
                android:layout_below="@id/etCity_FCL7" />

            <RadioGroup
                android:id="@+id/rgOwner_FCL7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/tvOwner_FCL7" >

                <RadioButton
                    android:id="@+id/rbtnOwnerVar1_FCL7"
                    style="@style/CheckListLeftAnswerRB"
                    android:checked="true"
                    android:text="@string/fragment_check_list_etap7_answer1_text" />

                <RadioButton
                    android:id="@+id/rbtnOwnerVar2_FCL7"
                    style="@style/CheckListRightAnswerRB"
                    android:text="@string/fragment_check_list_etap7_answer2_text" />

            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etSuchFixed_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question7_text"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etMobilePhone_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question8_text"
                android:layout_below="@id/etSuchFixed_FCL7"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etSuchOffice_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                style="@style/CheckListET"
                android:hint="@string/fragment_check_list_etap7_question9_text"
                android:layout_below="@id/etMobilePhone_FCL7"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/etEmail_FCL7"
                android:layout_width="@dimen/w_checklist_question"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_check_list_etap7_question10_text"
                style="@style/CheckListET"
                android:layout_below="@id/etSuchOffice_FCL7"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvPrimaryResidence_FCL7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CheckListQuestion"
                android:text="@string/fragment_check_list_etap7_question11_text"
                android:gravity="center"
                android:layout_below="@id/etEmail_FCL7" />

            <RadioGroup
                android:id="@+id/rgPrimaryResidence_FCL7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/tvPrimaryResidence_FCL7" >

                <RadioButton
                    android:id="@+id/rbtnPrimaryResidenceVar1_FCL7"
                    style="@style/CheckListLeftAnswerRB"
                    android:checked="true"
                    android:text="@string/fragment_check_list_etap7_answer1_text" />

                <RadioButton
                    android:id="@+id/rbtnPrimaryResidenceVar2_FCL7"
                    style="@style/CheckListRightAnswerRB"
                    android:text="@string/fragment_check_list_etap7_answer2_text" />

            </RadioGroup>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>