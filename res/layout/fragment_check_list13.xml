<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvBanner_FCL13"
              android:text="@string/fragment_check_list_etap13_banner_text"
              android:layout_alignParentTop="true"
              style="@style/CheckListEtapBanner"
        android:gravity="center"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvSubtitle_FCL13"
              android:text="@string/fragment_check_list_etap13_subtitle_text"
              android:layout_below="@id/tvBanner_FCL13"
              style="@style/CheckListEtapSubtitle"/>
<RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/tvSubtitle_FCL13">
             <TextView android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/tvQuestion1_FCL13"
                       android:layout_alignParentLeft="true"
                       android:layout_toLeftOf="@+id/etQuestion1_FCL13"
                       android:text="@string/fragment_check_list_etap13_question1_text"
                       android:layout_alignBottom="@+id/etQuestion1_FCL13"
                       android:layout_alignTop="@+id/etQuestion1_FCL13"
                       android:gravity="center"
                       style="@style/CheckListEtapStandard"/>
             <EditText android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/etQuestion1_FCL13"
                       android:text="enter text ..."
                       android:layout_alignParentRight="true"
                       android:inputType="text"
                       android:textSize="@dimen/text_size_standard"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnQuestion2_FCL13"
                    android:text="@string/fragment_check_list_etap13_question2_text"
                    android:id="@+id/tvQuestion2_FCL13"
                    android:layout_below="@+id/etQuestion1_FCL13"
                    android:layout_alignBottom="@+id/btnQuestion2_FCL13"
                    android:layout_alignTop="@+id/btnQuestion2_FCL13"
                    android:gravity="center"
                    style="@style/CheckListEtapStandard"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="C"
                    android:id="@+id/btnQuestion2_FCL13"
                    android:layout_below="@+id/etQuestion1_FCL13"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnQuestion3_FCL13"
                    android:text="@string/fragment_check_list_etap13_question3_text"
                    android:id="@+id/tvQuestion3_FCL13"
                    android:layout_below="@+id/tvQuestion2_FCL13"
                    android:layout_alignBottom="@+id/btnQuestion3_FCL13"
                    android:layout_alignTop="@+id/btnQuestion3_FCL13"
                    android:gravity="center"
                    style="@style/CheckListEtapStandard"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="C"
                    android:id="@+id/btnQuestion3_FCL13"
                    android:layout_below="@+id/btnQuestion2_FCL13"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnQuestion4_FCL13"
                    android:text="@string/fragment_check_list_etap13_question4_text"
                    android:id="@+id/tvQuestion4_FCL13"
                    android:layout_below="@+id/tvQuestion3_FCL13"
                    android:layout_alignBottom="@+id/btnQuestion4_FCL13"
                    android:layout_alignTop="@+id/btnQuestion4_FCL13"
                    android:gravity="center"
                    style="@style/CheckListEtapStandard"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="C"
                    android:id="@+id/btnQuestion4_FCL13"
                    android:layout_below="@+id/btnQuestion3_FCL13"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnQuestion5_FCL13"
                    android:text="@string/fragment_check_list_etap13_question5_text"
                    android:id="@+id/tvQuestion5_FCL13"
                    android:layout_below="@+id/tvQuestion4_FCL13"
                    android:layout_alignBottom="@+id/btnQuestion5_FCL13"
                    android:layout_alignTop="@+id/btnQuestion5_FCL13"
                    android:gravity="center"
                    style="@style/CheckListEtapStandard"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="C"
                    android:id="@+id/btnQuestion5_FCL13"
                    android:layout_below="@+id/btnQuestion4_FCL13"/>

</RelativeLayout>


</RelativeLayout>