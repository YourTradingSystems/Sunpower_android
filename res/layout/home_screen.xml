<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen_black">

    <Button
        android:id="@+id/btnGestionnaire_HS"
        style="@style/ButtonBrown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/home_screen_mon_table_text" />

    <Button
        android:id="@+id/btnCheckList_HS"
        style="@style/ButtonYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/home_screen_eligibility_text" />

    <Button
        android:id="@+id/btnArgumentaire_HS"
        style="@style/ButtonGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCheckList_HS"
        android:text="@string/home_screen_presentation_text" />
</RelativeLayout>

