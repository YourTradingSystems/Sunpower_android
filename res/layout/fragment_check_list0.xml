<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnStart_FCL0"
        style="@style/CheckListBTN"
        android:text="@string/start_checklist"
        android:layout_alignLeft="@+id/btnLead_CL0"
        android:layout_above="@+id/tvParentProfile_FCL0"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/w_checklist_btn"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgUserLogo_FCL0"
        android:layout_above="@+id/tvParentProfile_FCL0"
        android:layout_alignLeft="@+id/btnLead_CL0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvParentProfile_FCL0"
        android:layout_above="@+id/btnLead_CL0"
        android:layout_toRightOf="@+id/imgUserLogo_FCL0"/>

    <Button
        android:id="@+id/btnLead_CL0"
        style="@style/CheckListBTN"
        android:layout_centerInParent="true"
        android:text="@string/lead_change"
        android:layout_width="@dimen/w_checklist_btn"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnNewLead_FCL0"
        style="@style/CheckListBTN"
        android:text="@string/new_lead"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/btnLead_CL0"
        android:layout_below="@+id/btnLead_CL0" android:layout_alignRight="@+id/btnLead_CL0"
        android:layout_width="@dimen/w_checklist_btn"
        android:layout_height="wrap_content" />

</RelativeLayout>