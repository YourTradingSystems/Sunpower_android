<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/bg_screen_checklist">

    <TextView
        android:id="@+id/tvBannerFCL8"
        style="@style/CheckListEtapBanner"
        android:text="@string/fragment_check_list_etap8_banner_text"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvTypeConsumption_FCL8"
        style="@style/CheckListQuestion"
        android:text="@string/fragment_check_list_etap8_question1_text"
        android:layout_below="@+id/tvBannerFCL8"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/rgTypeConsumption_FCL8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvTypeConsumption_FCL8"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/rbtnTypeConsumptionVar1_FCL8"
            style="@style/CheckListLeftAnswerRB"
            android:checked="true"
            android:text="@string/fragment_check_list_etap8_answer1_text" />

        <RadioButton
            android:id="@+id/rbtnTypeConsumptionVar2_FCL8"
            style="@style/CheckListRightAnswerRB"
            android:text="@string/fragment_check_list_etap8_answer2_text" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvEstimatedkWh_FCL8"
        style="@style/CheckListQuestion"
        android:text="@string/fragment_check_list_etap8_question2_text"
        android:layout_below="@+id/rgTypeConsumption_FCL8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvEstimatedkWhAnswer_FCL8"
        style="@style/CheckListSubAnswer"
        android:text="@string/fragment_check_list_etap8_answer3_text"
        android:layout_below="@+id/tvEstimatedkWh_FCL8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvEstimatedEUR_FCL8"
        style="@style/CheckListQuestion"
        android:text="@string/fragment_check_list_etap8_question3_text"
        android:layout_below="@+id/tvEstimatedkWhAnswer_FCL8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvEstimatedEURAnswer_FCL8"
        style="@style/CheckListSubAnswer"
        android:text="@string/fragment_check_list_etap8_answer4_text"
        android:layout_below="@+id/tvEstimatedEUR_FCL8"
        android:layout_centerHorizontal="true" />

</RelativeLayout>