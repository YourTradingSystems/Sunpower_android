<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_screen_orange"
        >
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvCheckListEtap2Banner"
              android:text="@string/environment"
              android:textSize="@dimen/text_size_banner"
              android:textColor="@color/background_screen_white"
              android:gravity="center"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvCheckListEtap2subtitle"
              android:text="@string/distance_to_sea"
              android:textSize="@dimen/text_size_subtitle"
              android:textColor="@color/background_screen_white"
              android:gravity="center"/>

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_group_left"
                android:orientation="vertical">

            <RadioButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/radio_btn_more_than_10km"
                         android:button="@drawable/custom_radio_button"
                         android:text="@string/more_than_10km"/>

            <RadioButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/radio_btn_urban_less_than_3km"
                         android:button="@drawable/custom_radio_button"
                         android:text="@string/less_than_3km"/>

            <RadioButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/between_3km_and_10km"
                         android:button="@drawable/custom_radio_button"
                         android:id="@+id/radio_btn_between_3km_and_10km"/>
        </RadioGroup>

</LinearLayout>