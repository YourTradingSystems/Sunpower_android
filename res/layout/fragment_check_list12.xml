<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_income"
            android:textColor="@color/checklist_main_text"
            android:id="@+id/tvYourIncome_FCL12"
            android:layout_above="@+id/llYourAddress"
            android:gravity="center_horizontal"
        style="@style/CheckListEtapBanner"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llOrientationRoof_FCL12"
            android:layout_centerHorizontal="true"
            android:id="@+id/llYourAddress"
            android:gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvYourAddress_FCL12"
                android:textSize="@dimen/text_size_subtitle"
                android:textColor="@color/checklist_main_text"
                android:text="@string/your_address"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvValueAddress_FCL12"
                android:text="25, avenue du General Michel Bizot"
                android:textColor="@color/checklist_sub_main_text"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llAreaRoof_FCL12"
            android:layout_centerHorizontal="true"
            android:id="@+id/llOrientationRoof_FCL12"
            android:gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTheOrientationOfMyRoof_FCL12"
                android:textSize="@dimen/text_size_subtitle"
                android:textColor="@color/checklist_main_text"
                android:text="@string/the_orientation_of_my_roof"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvValueOrientation_FCL12"
                android:text="Sud-Est"
                android:textColor="@color/checklist_sub_main_text"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvEstimatedAnnualProduction_FCL12"
            android:layout_centerHorizontal="true"
            android:id="@+id/llAreaRoof_FCL12"
            android:gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTheAreaOfMyRoof_FCL12"
                android:textSize="@dimen/text_size_subtitle"
                android:text="@string/the_area_of_my_roof"
                android:textColor="@color/checklist_main_text"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvValueArea_FCL12"
                android:text="25m"
                android:textColor="@color/checklist_sub_main_text"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvEstimatedAnnualProduction_FCL12"
            android:text="@string/estimated_annual_production"
            android:layout_centerInParent="true"
            android:textColor="@color/checklist_main_text"
            android:textSize="@dimen/text_size_subtitle"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvValueProduction_FCL12"
            android:layout_centerHorizontal="true"
            android:text="3 644kWH"
            android:textSize="@dimen/text_size_subtitle"
            android:textColor="@color/checklist_sub_main_text"
            android:layout_below="@+id/tvEstimatedAnnualProduction_FCL12"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEstimatedAnnualIncome_FCL12"
            android:layout_centerHorizontal="true"
            android:textColor="@color/checklist_main_text"
            android:textSize="@dimen/text_size_subtitle"
            android:text="@string/estimated_annual_income"
            android:layout_below="@+id/tvValueProduction_FCL12"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvValueIncome_FCL12"
            android:layout_centerHorizontal="true"
            android:text="1100euros"
            android:textColor="@color/checklist_sub_main_text"
            android:textSize="@dimen/text_size_subtitle"
            android:layout_below="@+id/tvEstimatedAnnualIncome_FCL12"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

</RelativeLayout>