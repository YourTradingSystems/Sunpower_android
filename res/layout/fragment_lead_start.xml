<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivSunPower_FLS" android:src="@drawable/sunpower_prime" android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/ivLogo_FLS" android:layout_marginBottom="@dimen/m_lead"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/tvWelcome_FLS" android:layout_centerHorizontal="true"
            android:layout_below="@+id/ivSunPower_FLS" android:gravity="center" style="@style/LeadText"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivLogo_FLS" android:src="@drawable/lead_logo"
            android:adjustViewBounds="true" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>