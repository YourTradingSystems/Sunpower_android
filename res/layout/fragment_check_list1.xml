<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_screen_checklist"
        >
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvCheckListEtap1Banner"
              android:text="@string/environment"
              android:textSize="@dimen/ts_banner"
              android:textColor="@color/bg_screen_login"
              android:gravity="center"
              android:layout_above="@+id/tvCheckListEtap1subtitle"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvCheckListEtap1subtitle"
              android:text="@string/environment_more"
              android:textSize="@dimen/text_size_subtitle"
              android:textColor="@color/bg_screen_login"
              android:gravity="center"
              android:layout_above="@+id/ll"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/ll"
            android:orientation="horizontal">
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg"
                android:layout_weight="1"
                android:orientation="vertical">
            <RadioButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/radio_btn_coastal_zone"
                         android:button="@drawable/custom_radio_button"
                         android:text="@string/coastal_zone"/>
            <RadioButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/radio_btn_urban"
                         android:button="@drawable/custom_radio_button"
                         android:text="@string/urban"/>
            <RadioButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/suburbs"
                         android:button="@drawable/custom_radio_button"
                         android:id="@+id/radio_btn_suburbs"/>
        </RadioGroup>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radio_group_right"
                android:orientation="vertical">
            <RadioButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/radio_btn_environment_more"
                         android:button="@drawable/custom_radio_button"
                         android:text="@string/environment_more"/>
            <RadioButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:button="@drawable/custom_radio_button"
                         android:id="@+id/radio_btn_environment"
                         android:text="@string/environment"/>

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>