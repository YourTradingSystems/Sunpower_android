<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_screen_orange"
        >
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvCheckListEtap1Banner"
              android:text="@string/fragment_check_list_etap1_banner_text"
              android:textSize="@dimen/text_size_banner"
              android:gravity="center"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvCheckListEtap1subtitle"
              android:text="@string/fragment_check_list_etap1_subtitle_text"
              android:textSize="@dimen/text_size_subtitle"
              android:gravity="center"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1">

            <CheckBox android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Blala"
                      android:gravity="right"/>
            <CheckBox android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Blala"
                      android:gravity="right"/>
            <CheckBox android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Blala"
                      android:gravity="right"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <CheckBox android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Blala"/>
            <CheckBox android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Blala"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>