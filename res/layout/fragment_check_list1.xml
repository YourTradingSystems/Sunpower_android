<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <TextView
              android:id="@+id/tvCheckListEtap1Banner"
              style="@style/CheckListEtapBanner"
              android:text="@string/environment"
              android:layout_above="@+id/tvSubtitle_FCL1"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvSubtitle_FCL1"
              android:text="@string/environment_more"
              android:textSize="@dimen/text_size_subtitle"
              android:textColor="@color/bg_screen_login"
              android:gravity="center"
              android:layout_above="@+id/tblLayout_FCL1"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tblLayout_FCL1">

        <TableRow android:layout_height="match_parent"
                  android:layout_width="match_parent"
                  android:gravity="center_horizontal">
            <RadioButton
                    android:id="@+id/radio_btn_coastal_zone_FCL1"
                    style="@style/CheckListLeftAnswerRB"
                    android:text="@string/coastal_zone"
                    android:layout_gravity="right"
                    android:layout_weight="1"/>
            <RadioButton
                    android:id="@+id/radio_btn_open_space_FCL1"
                    style="@style/CheckListRightAnswerRB"
                    android:text="@string/open_space"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <RadioButton
                    android:id="@+id/radio_btn_urban_FCL1"
                    style="@style/CheckListLeftAnswerRB"
                    android:layout_width="wrap_content"
                    android:text="@string/urban"
                    android:lines="2"
                    android:layout_gravity="right"/>
            <RadioButton
                    android:id="@+id/radio_btn_open_terrain_FCL1"
                    style="@style/CheckListRightAnswerRB"
                    android:text="@string/open_terrain"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"/>

        </TableRow>
        <TableRow>
            <RadioButton
                    android:text="@string/suburbs"
                    style="@style/CheckListLeftAnswerRB"
                    android:id="@+id/radio_btn_suburbs_FCL1"
                    android:layout_width="match_parent"
                    android:layout_gravity="right"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>