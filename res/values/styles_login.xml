<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTextFields">
        <item name="android:textSize">@dimen/ts_login</item>
        <item name="android:textColor">@color/text_login_text_field</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:background">@drawable/bg_login_text_field</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/ptb_login</item>
        <item name="android:paddingBottom">@dimen/ptb_login</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="LoginErrorText">
        <item name="android:background">@drawable/bg_login_error</item>
        <item name="android:textSize">@dimen/ts_login_error</item>
        <item name="android:textColor">@color/text_login_error</item>
        <item name="android:paddingTop">@dimen/ptb_login_error</item>
        <item name="android:paddingBottom">@dimen/ptb_login_error</item>
    </style>

    <style name="LoginErrorIcon" parent="EmptyImageView">
        <item name="android:src">@drawable/ic_error</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">@dimen/ts_login</item>
        <item name="android:textColor">@color/text_login_btn</item>
        <item name="android:background">@drawable/selector_btn_login</item>
        <item name="android:paddingTop">@dimen/ptb_login</item>
        <item name="android:paddingBottom">@dimen/ptb_login</item>
    </style>
</resources>