<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeBtnOpenClose">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/p_home_btn_open_close</item>
    </style>

    <style name="HomeCheckListBTN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_home_check_list</item>
        <item name="android:textColor">@color/text_home_button</item>
        <item name="android:textSize">@dimen/ts_checklist_banner</item>
        <item name="android:padding">@dimen/p_home_btn</item>
    </style>

    <style name="HomeArgumentarieBTN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_home_argument</item>
        <item name="android:textColor">@color/text_home_button</item>
        <item name="android:textSize">@dimen/ts_checklist_banner</item>
        <item name="android:padding">@dimen/p_home_btn</item>
    </style>

    <style name="HomeAdministratorBTN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_home_administrator</item>
        <item name="android:textColor">@color/text_home_button</item>
        <item name="android:textSize">@dimen/ts_checklist_banner</item>
        <item name="android:padding">@dimen/p_home_btn</item>
    </style>

    <style name="HomeCheckListCB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mt_home_cb</item>
        <item name="android:button">@drawable/custom_home_check_box_yellow</item>
    </style>

    <style name="HomeArgumentarieCB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mt_home_cb</item>
        <item name="android:button">@drawable/custom_home_check_box_green</item>
    </style>

    <style name="HomeAdministratorCB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/mt_home_cb</item>
        <item name="android:button">@drawable/custom_home_check_box_brown</item>
    </style>
</resources>